<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- 基礎主題 (深色) -->
    <style name="Theme.SaveIt" parent="android:Theme.Material.NoActionBar" />

    <!-- 透明背景子主題 -->
    <style name="Theme.SaveIt.Translucent" parent="Theme.SaveIt">
        <item name="android:windowIsTranslucent">true</item>

        <!-- Android 12 (API 31)+ Splash Screen 透明化優化 -->
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="31">
            @android:color/transparent
        </item>
        <item name="android:windowSplashScreenBackground" tools:targetApi="31">
            @android:color/transparent
        </item>
    </style>
</resources>
